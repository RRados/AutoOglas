   <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NormalizedUserName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NormalizedUserName)
            </dd>
            <dt class="col-sm-3">
