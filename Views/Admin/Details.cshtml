@using Microsoft.AspNetCore.Identity;
@using WebAppOglas.Models
@model IdentityUser

@{
    ViewBag.Title = "User details";
}
@{
    Layout = "/Views/_MainLayout.cshtml";
}

<div class="card shadow">  
    
