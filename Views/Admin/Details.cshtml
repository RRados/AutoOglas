            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.AccessFailedCount)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AccessFailedCount)
            </dd>
        </dl>
    </div>

    <div class="card-footer py-3 bg-transparent">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-info">Edit</a> 
        <a asp-action="Index" class="btn btn-sm btn-outline-danger">Back to List</a>
    </div>
