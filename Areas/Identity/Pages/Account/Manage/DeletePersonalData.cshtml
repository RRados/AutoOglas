@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center shadow">

    <div class="card">

        <h4 class="card-header bg-transparent text-center">@ViewData["Title"]</h4>

    <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <p class="text-center">
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>

            <form id="delete-user" method="post" class="form-group">

                <div asp-validation-summary="All" class="text-danger"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-sm btn-danger mt-3" type="submit">Delete data and close my account</button>
            </form>            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}