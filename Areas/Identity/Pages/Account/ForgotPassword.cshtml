@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password ?";
}


<div class="container w-50">

    <div class="card shadow ">
           
        <div class="card-header text-white-50 bg-transparent">

            <h3 class="text-white-50 text-center">@ViewData["Title"]</h3>   
        </div>
      
        <div class="card-body">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <h5 class="text-white-50">Enter your email.</h5>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-danger btn-sm mt-3 shadow-md">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
