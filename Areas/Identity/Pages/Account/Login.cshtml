@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<form id="account" method="post" class="container p-3 bg-dark border border-info rounded mt-5 shadow-lg" style="width: 20em;">

    <div class="card-header border-0 mt-2">
        <h2 class="text-white-50">@ViewData["Title"]</h2>
        <hr class="bg-info" />
    </div>

    <div class="form-group text-white-50">
        <label asp-for="Input.Email" class="m-1"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group text-white-50 mt-3">
        <label asp-for="Input.Password" class="m-1"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group text-white-50 mt-4">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" class="text-decoration-none" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>

    <br />

    <div class="form-group text-white-50 mt-2">
        <button type="submit" class="btn btn-outline-info">Log in</button>
    </div>

    <br />

    <div class="form-group text-white-50 mt-2">
        <p>
            <a class="text-white-50 text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a class="text-white-50 text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
